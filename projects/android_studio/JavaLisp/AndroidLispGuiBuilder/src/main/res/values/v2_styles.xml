<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name = "v2_code_editor">
        <item name = "android:typeface">monospace</item>
        <item name = "android:textSize">12sp</item>
        <item name = "android:gravity">top|left</item>
        <item name = "android:scrollHorizontally">true</item>
        <item name = "android:background">#FFF</item>
        <item name = "android:textColor">#000</item>
    </style>
    <style name = "v2_result_window">
        <item name = "android:typeface">monospace</item>
        <item name = "android:textSize">12sp</item>
        <item name = "android:gravity">top|left</item>
        <item name = "android:background">#000</item>
        <item name = "android:textColor">#0F0</item>

    </style>
    <style name ="v2_page_properties_title" parent = "@style/page_properties_header">
        <item name="android:textSize">
            25sp
        </item>
        <item name = "android:textColor">#000</item>

    </style>
    <style name = "v2_page_properties_panel">
        <item name= "android:background">#FFF</item>
    </style>
    <style name="v2_properties_container">
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name = "properties_container_even" parent = "@style/v2_properties_container">
        <item name = "android:background">@drawable/v2_floating_background_blue</item>
        <item name = "android:padding">10dp</item>
    </style>
    <style name = "properties_container_odd" parent = "@style/v2_properties_container">
        <item name = "android:background">@drawable/v2_floating_background_green</item>
        <item name = "android:padding">10dp</item>
    </style>
    <style name = "v2_page_properties_buttons">
        <item name = "android:textSize">20sp</item>
    </style>
    <style name = "page_properties_header">
        <item name = "android:textSize">20sp</item>
        <item name = "android:textStyle">bold</item>
    </style>
    <style name = "page_properties_subheader" parent = "@style/page_properties_header">
        <item name = "android:textSize">15sp</item>
    </style>
    <style name = "page_properties_info">
        <item name = "android:textSize">15sp</item>
    </style>

    <style name = "workspace_list_item">
        <item name = "android:height">@dimen/v2_workspace_list_item_size</item>
        <item name = "android:paddingLeft">@dimen/v2_workspace_list_item_padding_sides</item>
        <item name = "android:paddingRight">@dimen/v2_workspace_list_item_padding_sides</item>
    </style>
</resources>