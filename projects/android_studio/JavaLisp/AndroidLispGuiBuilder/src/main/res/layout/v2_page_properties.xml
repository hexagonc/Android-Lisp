<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android = "http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style = "@style/v2_page_properties_panel">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text = "@string/v2_page_properties_title"
            style = "@style/v2_page_properties_title"
            android:id = "@+id/v2_page_properties_title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            style = "@style/properties_container_even"
            android:id = "@+id/v2_lin_title_properties">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Title: "
                android:layout_alignParentLeft="true"
                style = "@style/page_properties_header"
                android:id =  "@+id/label"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="undefined"
                android:id = "@+id/v2_edit_page_title"
                android:layout_marginBottom="15dp"
                style = "@style/page_properties_info"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Update"
                android:id = "@+id/v2_button_update_title"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id ="@+id/v2_lin_dropbox_page_config"
            style = "@style/properties_container_odd">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity = "left">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "Dropbox Sync"
                        style = "@style/page_properties_header"
                        android:layout_gravity="left"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity = "right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text = "Log-in"
                        android:layout_gravity="right"
                        style = "@style/page_properties_info"/>

                </LinearLayout>



            </LinearLayout>
            <View android:layout_width = "match_parent"
                  android:layout_height = "3dp"
                  android:background = "#0f0068"
                  android:layout_marginBottom="10dp"
                  android:layout_marginTop="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Linked File:"
                style = "@style/page_properties_subheader"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id = "@+id/v2_txt_dropbox_sync_filename"
                android:hint="tap to set path"
                android:text = ""
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                android:padding="5dp"
                android:clickable="true"
                android:gravity="left|center_vertical"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Clear"
                    android:id = "@+id/v2_but_clear_dropbox_linked_file"
                    style = "@style/v2_page_properties_buttons"
                    />

            </LinearLayout>
            <View android:layout_width = "match_parent"
                  android:layout_height = "3dp"
                  android:background = "#0f0068"
                  android:layout_marginBottom="10dp"
                  android:layout_marginTop="10dp"
                />
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton android:id = "@+id/v2_rad_save_to_dropbox"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text = "Save to dropbox"
                             android:checked="false"
                             style = "@style/page_properties_info">

                </RadioButton>
                <RadioButton android:id = "@+id/v2_rad_load_from_dropbox"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text = "Load page from dropbox"
                             android:checked="true"
                             style = "@style/page_properties_info">

                </RadioButton>
            </RadioGroup>
            <Button android:id = "@+id/v2_but_sync_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text = "Sync Now"
                    style = "@style/v2_page_properties_buttons"
                    android:layout_gravity="left"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity = "left">
                <Button
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text = "Accept"
                    android:id = "@+id/v2_but_accept_page_properties"
                    style = "@style/v2_page_properties_buttons"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity = "right">
                <Button
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text = "Cancel"
                    android:id = "@+id/v2_but_dismiss_page_properties"
                    style = "@style/v2_page_properties_buttons"
                    android:layout_gravity="right"/>
            </LinearLayout>



        </LinearLayout>





    </LinearLayout>
</ScrollView>
