<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom = 'http://schemas.android.com/apk/res-auto'
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity = "center_vertical">
    <com.evolved.automata.android.widgets.ShadowButton
        custom:text = 'Eval'
        custom:textSize = '@dimen/v2_eval_panel_shadow_size'
        custom:textColor = '#000'
        android:layout_gravity = "right"
        android:layout_width="wrap_content"
        android:layout_height='wrap_content'
        android:id = '@+id/v2_but_eval'
        android:paddingLeft="@dimen/history_button_padding_left_right"
        android:paddingRight="@dimen/history_button_padding_left_right"
        android:paddingTop = '@dimen/history_button_padding_top_bottom'
        android:paddingBottom = '@dimen/history_button_padding_top_bottom'
        android:layout_marginRight = "10dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/v2_but_clear_selection"
        android:text = "X"
        android:src = "@drawable/ic_clear_black_24dp"
        android:layout_marginRight = "30dp"
        android:background="@drawable/v2_code_editor_toolbar_button_background"/>
    <com.evolved.automata.android.widgets.ShadowButton
        custom:text = 'Save'
        custom:textSize = '@dimen/v2_eval_panel_shadow_size'
        custom:textColor = '#000'
        android:layout_gravity = "right"
        android:layout_width="wrap_content"
        android:layout_height='wrap_content'
        android:id = '@+id/v2_but_save_page'
        android:paddingLeft="@dimen/history_button_padding_left_right"
        android:paddingRight="@dimen/history_button_padding_left_right"
        android:paddingTop = '@dimen/history_button_padding_top_bottom'
        android:paddingBottom = '@dimen/history_button_padding_top_bottom'/>
    <com.evolved.automata.android.widgets.ShadowButton
        custom:text = 'Read-Only: False'
        custom:textSize = '@dimen/v2_eval_panel_shadow_size'
        custom:textColor = '#000'
        android:layout_gravity = "right"
        android:layout_width="wrap_content"
        android:layout_height='wrap_content'
        android:id = '@+id/v2_but_toggle_readonly'
        android:paddingLeft="@dimen/history_button_padding_left_right"
        android:paddingRight="@dimen/history_button_padding_left_right"
        android:paddingTop = '@dimen/history_button_padding_top_bottom'
        android:paddingBottom = '@dimen/history_button_padding_top_bottom'/>



</LinearLayout>
