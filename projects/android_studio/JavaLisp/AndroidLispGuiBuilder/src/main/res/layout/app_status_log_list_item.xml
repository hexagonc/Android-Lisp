<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <TextView
            android:id = "@+id/txt_log_time"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textSize = "@dimen/app_status_log_listview_item_text_size"
            android:text = "10/3/2017 - 16:23"
            android:layout_marginRight="@dimen/app_status_log_listview_item_date_summary_sep"

            />
        <TextView
            android:id = "@+id/txt_source_label"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:textSize = "@dimen/app_status_log_listview_item_text_size"
            android:text = "SYSTEM"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/app_status_log_listview_item_date_summary_sep"

            />

    </LinearLayout>
    <TextView
        android:id = "@+id/txt_log_summary"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:textSize = "@dimen/app_status_log_listview_item_text_size"
        android:text = "Received result"
        android:layout_marginRight="@dimen/app_status_log_listview_item_date_summary_sep"
        android:textColor="@color/app_status_log_entry_listview_summary"
        />
</LinearLayout>