<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom = 'http://schemas.android.com/apk/res-auto'
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width = 'match_parent'
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id = "@+id/v2_lin_page_navigation">
        <com.evolved.automata.android.widgets.ShadowButton
            custom:text = '@string/v2_workspace_fragment_prev_page_label'
            custom:textSize = '@dimen/v2_workspace_fragment_nav_button_text_size'
            custom:textColor = '#000'
            android:layout_width="wrap_content"
            android:layout_height='wrap_content'
            android:id = '@+id/v2_but_history_back'
            android:layout_alignParentLeft="true"
            android:padding = "-20dp"
            />




        <com.evolved.automata.android.widgets.ShadowButton
            custom:text = '@string/v2_workspace_fragment_next_page_label'
            custom:textSize = '@dimen/v2_workspace_fragment_nav_button_text_size'
            custom:textColor = '#000'
            android:layout_width="wrap_content"
            android:layout_height='wrap_content'
            android:id = '@+id/v2_but_history_forward'
            android:padding = "-20dp"
            android:layout_alignParentRight="true"/>
        <LinearLayout
            android:layout_width = 'wrap_content'
            android:layout_height = 'wrap_content'
            android:orientation="horizontal"
            android:gravity = "right|center_vertical"
            android:id = "@+id/lin_container"
            android:layout_toLeftOf="@id/v2_but_history_forward">
            <com.evolved.automata.android.widgets.ShadowButton
                custom:text = '@string/v2_more_info_label'
                custom:textSize = '@dimen/v2_more_info_text_size'
                custom:textColor = '#000'
                android:layout_gravity = "right"
                android:layout_width="wrap_content"
                android:layout_height='wrap_content'
                android:id = '@+id/v2_but_status_more_info'
                android:visibility="invisible"
                android:padding = "-25dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hourglass_full_black_24dp"
                android:id = "@+id/img_progress_icon"
                android:scaleType="centerInside"
                android:visibility="invisible"
                android:background="@android:color/transparent"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_24dp"
                android:id = "@+id/v2_but_add_page"
                android:scaleType="centerInside"
                android:background="@android:color/transparent"/>

        </LinearLayout>
        <TextView
            android:id = '@+id/v2_txt_page_title'
            android:text = '@string/v2_page_title_default_name'
            android:layout_width = 'wrap_content'
            android:layout_height = 'wrap_content'
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/v2_workspace_fragment_status_area_title_text_size"
            android:textStyle="bold"
            android:gravity = "center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/v2_but_history_back"
            android:layout_toLeftOf="@id/lin_container"
            />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/v2_frag_page"
        android:orientation="vertical">

    </FrameLayout>

</LinearLayout>