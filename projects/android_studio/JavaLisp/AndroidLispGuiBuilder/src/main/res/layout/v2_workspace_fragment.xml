<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:custom = 'http://schemas.android.com/apk/res-auto'
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width = 'match_parent'
        android:layout_height="wrap_content"
        android:gravity = "center_vertical"
        android:orientation="horizontal"
        android:id = "@+id/v2_lin_page_navigation"
        android:layout_marginBottom = '@dimen/v2_workspace_fragment_status_area_margin_bottom'>
        <FrameLayout
            android:layout_width = '0px'
            android:layout_height = 'wrap_content'
            android:layout_weight = '1'
            >
            <com.evolved.automata.android.widgets.ShadowButton
                custom:text = '@string/v2_workspace_fragment_prev_page_label'
                custom:textSize = '@dimen/v2_workspace_fragment_nav_button_text_size'
                custom:textColor = '#000'
                android:layout_gravity = 'left'
                android:layout_width="wrap_content"
                android:layout_height='wrap_content'
                android:id = '@+id/v2_but_history_back'/>
        </FrameLayout>
        <FrameLayout
            android:layout_width = '0px'
            android:layout_height = 'wrap_content'
            android:layout_weight = '1'
            android:layout_gravity = 'center'>
            <TextView
                android:id = '@+id/v2_txt_page_title'
                android:text = '@string/v2_page_title_default_name'
                android:layout_width = 'wrap_content'
                android:layout_height = 'wrap_content'
                android:layout_gravity="center"
                android:textSize="@dimen/v2_workspace_fragment_status_area_title_text_size"
                android:textStyle="bold"
                />
        </FrameLayout>


        <LinearLayout
            android:layout_width = '0px'
            android:layout_height = 'wrap_content'
            android:layout_weight = '1'
            android:orientation="horizontal"
            android:gravity = "right|center_vertical"
            >
            <com.evolved.automata.android.widgets.ShadowButton
                custom:text = '@string/v2_more_info_label'
                custom:textSize = '@dimen/v2_more_info_text_size'
                custom:textColor = '#000'
                android:layout_gravity = "right"
                android:layout_width="wrap_content"
                android:layout_height='wrap_content'
                android:id = '@+id/v2_but_status_more_info'
                android:visibility="invisible"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_black_24dp"
                android:id = "@+id/v2_but_add_page"
                android:background="@drawable/v2_code_editor_toolbar_button_background"/>
            <com.evolved.automata.android.widgets.ShadowButton
                custom:text = '@string/v2_workspace_fragment_next_page_label'
                custom:textSize = '@dimen/v2_workspace_fragment_nav_button_text_size'
                custom:textColor = '#000'
                android:layout_gravity = "right"
                android:layout_width="wrap_content"
                android:layout_height='wrap_content'
                android:id = '@+id/v2_but_history_forward'
                />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/v2_frag_page"
        android:orientation="vertical">

    </FrameLayout>

</LinearLayout>