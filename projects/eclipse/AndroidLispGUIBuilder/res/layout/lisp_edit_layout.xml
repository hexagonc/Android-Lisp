<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@android:color/white" >
    
    <LinearLayout  android:layout_width = 'match_parent'
        		   android:layout_height = 'wrap_content'
        		   android:layout_weight = '0'
        		   android:orientation="horizontal">
        	<TextView android:id = '@+id/txt_title'
        			 android:text="previous"
        			 android:layout_width='0px'
        			 android:layout_height ='wrap_content'
        			 android:layout_weight="1"
        			 android:gravity="left"
        			 android:textSize="14sp"
        			 android:padding = '5dp'/>
       
       
	       <Spinner android:layout_width = "0px"
	            	android:layout_height="wrap_content"
	            	android:id = '@+id/spinner_samples'
	        		android:layout_weight = '1'
	        		android:gravity="right"/>
        
    </LinearLayout>
    
    
    
   <LinearLayout 
       android:layout_height = 'wrap_content'
       android:layout_width="match_parent"
       android:layout_weight = '0'
       android:orientation="horizontal">
       <Button 
           android:text = 'Evaluate'
           android:layout_width="0px"
           android:layout_height='wrap_content'
           android:layout_weight='1'
           android:id = '@+id/but_run'
           />
       
       <Button 
           android:text = 'Clear'
           android:layout_width="0px"
           android:layout_height='wrap_content'
           android:layout_weight='1'
           android:id = '@+id/but_clear'
           />
       <Button 
           android:text = 'Render'
           android:layout_width="0px"
           android:layout_height='wrap_content'
           android:layout_weight='1'
           android:id = '@+id/but_render'
           />
       
   </LinearLayout>
   
   <EditText 
       android:id = '@+id/edit_code_view'
       android:layout_width = 'match_parent'
       android:layout_height = '0px'
       android:layout_weight = '1'
       android:typeface="monospace"
       android:textSize="12sp"
       android:gravity = 'left|top'
       />
   <TextView android:layout_width = 'wrap_content'
       android:layout_height = 'wrap_content'
       android:layout_weight = '0'
       android:text = 'Console Output:'
       android:textSize="11sp"
       android:padding="4dp"
       android:gravity = 'left'/> 
     <EditText 
       android:gravity="bottom|left"
       
       android:id = '@+id/edit_console_output'
       android:text = '@string/console_prompt'
       android:layout_width = 'match_parent'
       android:layout_height = 'wrap_content'
       android:lines="5"
       android:layout_weight = '0'
       android:typeface="monospace"
       android:textSize="11sp"
       android:background="#000"
       android:textColor="#3DE164"
       android:editable="false"
       />

</LinearLayout>
